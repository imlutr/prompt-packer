{
  "name": "prompt-packer",
  "version": "1.0.0",
  "description": "Pack files into a single text file for AI prompts",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "prompt-packer": "./dist/cli.js"
  },
  "scripts": {
    "dev": "node --no-warnings --loader ts-node/esm src/cli.ts",
    "build": "tsc",
    "lint": "eslint . --ext .ts,.js",
    "lint:fix": "eslint . --ext .ts,.js --fix",
    "prepare": "husky install"
  },
  "keywords": [
    "cli",
    "file-packer",
    "ai",
    "ai-prompts",
    "file-bundler",
    "text-concatenation",
    "prompt-engineering"
  ],
  "author": "lutr",
  "license": "MIT",
  "dependencies": {
    "@types/glob": "^8.1.0",
    "commander": "^12.1.0",
    "glob": "^10.4.3",
    "ignore": "^5.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "@typescript-eslint/eslint-plugin": "^7.15.0",
    "@typescript-eslint/parser": "^7.15.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "git add"
    ]
  }
}
